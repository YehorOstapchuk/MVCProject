@model ProjectMVC.Cathedras

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити це?</h3>
<div>
    <h4>Кафедру</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CathedraName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CathedraName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Faculty.FacultyName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" value="@ViewBag.FacultyID" name="FacultyID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href='javascript:history.go(-1)'>Повернутися до списку</a>
    </form> 
</div>

